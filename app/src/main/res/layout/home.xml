<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:yandex="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:orientation="vertical">
	<androidx.coordinatorlayout.widget.CoordinatorLayout
		android:id="@+id/linear1"
		android:layout_width="match_parent"
		android:layout_height="match_parent">
		<RelativeLayout
			android:layout_width="match_parent"
			android:layout_height="match_parent">

			<com.yandex.mapkit.mapview.MapView
				android:id="@+id/mapview1"
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:visibility="invisible"
				yandex:movable="true" />
			<androidx.cardview.widget.CardView
				android:id="@+id/save_scale_type"
				android:visibility="gone"
				android:layout_alignParentStart="true"
				android:layout_width="50dp"
				android:layout_height="50dp"
				app:cardElevation="10dp"
				app:cardCornerRadius="10dp"
				android:layout_marginLeft="10dp"
				android:layout_marginTop="10dp"
			>
				<LinearLayout
					android:layout_width="match_parent"
					android:background="@color/colorControlNormal"
					android:layout_height="match_parent">
					<TextView
						android:id="@+id/speed"
						android:layout_width="match_parent"
						android:layout_height="match_parent"
						android:text="24"
						android:textSize="29dp"
						android:gravity="center"
						android:textColor="#fff"
				 />
				</LinearLayout>
			</androidx.cardview.widget.CardView>
			<androidx.cardview.widget.CardView
				android:id="@+id/error_block"
				android:visibility="gone"
				android:layout_alignParentEnd="true"
				android:layout_width="50dp"
				android:layout_height="50dp"
				app:cardBackgroundColor="@color/colorControlNormal"
				app:cardElevation="10dp"
				app:cardCornerRadius="10dp"
				android:layout_marginRight="10dp"
				android:layout_marginTop="10dp"
			>
				<ImageView
					android:layout_width="match_parent"
					android:layout_height="match_parent"
					android:src="@drawable/warning"
					android:padding="7dp"
				/>
			</androidx.cardview.widget.CardView>
		</RelativeLayout>
		<ImageView
			android:id="@+id/image"
			android:src="@drawable/scooter1"
			android:layout_width="match_parent"
			android:scaleType="centerInside"
			android:translationX="100dp"
			android:scaleX="-1.5"
			android:scaleY="1.5"
			android:layout_height="match_parent" />
		<LinearLayout
			android:id="@+id/linear2"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:gravity="center_horizontal"
			android:orientation="vertical"
			app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior"
			app:behavior_peekHeight="110dp">
			<LinearLayout
				android:id="@+id/route_block"
				android:layout_width="match_parent"
				android:layout_height="40dp"
				android:orientation="horizontal">
				<androidx.cardview.widget.CardView
					android:id="@+id/home"
					android:layout_width="100dp"
					android:layout_height="match_parent"
					app:cardElevation="10dp"
					android:layout_marginLeft="5dp"
					android:layout_marginBottom="5dp"
					app:cardCornerRadius="20dp"
					app:cardBackgroundColor="@color/colorControlHighlight"
				>
					<LinearLayout
						android:layout_width="match_parent"
						android:layout_height="match_parent">
						<ImageView
							android:tint="#fff"
							android:layout_width="35dp"
							android:layout_height="match_parent"
							android:padding="5dp"
							android:src="@drawable/home"
						/>
						<TextView
							android:layout_width="match_parent"
							android:layout_height="match_parent"
							android:gravity="center"
							android:text="Home"
							android:layout_marginRight="5dp"
							android:textSize="20dp"
							android:textColor="#fff"
						/>
					</LinearLayout>
				</androidx.cardview.widget.CardView>
				<androidx.cardview.widget.CardView
					android:id="@+id/garden"
					android:layout_width="120dp"
					android:layout_height="match_parent"
					app:cardElevation="10dp"
					android:layout_marginLeft="5dp"
					android:layout_marginBottom="5dp"
					app:cardCornerRadius="20dp"
					app:cardBackgroundColor="@color/colorControlHighlight"
				>
					<LinearLayout
						android:layout_width="match_parent"
						android:layout_height="match_parent">
						<ImageView
							android:tint="#fff"
							android:layout_width="35dp"
							android:layout_height="match_parent"
							android:padding="5dp"
							android:src="@drawable/garden"
						/>
						<TextView
							android:layout_width="match_parent"
							android:layout_height="match_parent"
							android:gravity="center"
							android:text="Garden"
							android:layout_marginRight="5dp"
							android:textSize="20dp"
							android:textColor="#fff"
						/>
					</LinearLayout>
				</androidx.cardview.widget.CardView>
			</LinearLayout>
			<LinearLayout
				android:gravity="center"
				android:padding="8dp"
				android:background="@drawable/sheet_background"
				android:orientation="vertical"
				android:layout_width="match_parent"
				android:layout_height="match_parent">
				<androidx.cardview.widget.CardView
					android:layout_width="40dp"
					android:layout_height="4dp"
					app:cardCornerRadius="10dp"
					app:cardElevation="0dp"
					>
					<LinearLayout
						android:id="@+id/linear13"
						android:layout_width="match_parent"
						android:layout_height="match_parent"
						android:padding="8dp"
						android:background="#000000"
						android:orientation="horizontal" />
				</androidx.cardview.widget.CardView>

				<TextView
					android:id="@+id/textview1"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_marginTop="8dp"
					android:padding="8dp"
					android:text="Midway i pro"
					android:textSize="20sp"
					android:textStyle="bold"
					android:textColor="#000000" />
				<LinearLayout
					android:id="@+id/linear4"
					android:layout_width="match_parent"
					android:layout_height="1dp"
					android:padding="8dp"
					android:background="#000000"
					android:orientation="horizontal" />
				<LinearLayout
					android:id="@+id/linear16"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:padding="8dp"
					android:orientation="horizontal" />
				<sc.denishik.ru.other.CustomViewPager
					android:id="@+id/viewpage"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					/>
			</LinearLayout>

		</LinearLayout>
	</androidx.coordinatorlayout.widget.CoordinatorLayout>
</LinearLayout>
