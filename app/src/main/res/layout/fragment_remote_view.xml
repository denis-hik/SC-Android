<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".pages.RemoteView">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:padding="10dp"
            android:layout_height="40dp">
            <Button
                android:id="@+id/back"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Back"
                android:background="@color/colorControlNormal"
                android:textColor="#fff"
            />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:padding="10dp">

            <androidx.cardview.widget.CardView
                android:id="@+id/light"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                app:cardBackgroundColor="@color/colorControlNormal"
                app:cardCornerRadius="10dp"
                app:cardElevation="0dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/light_image"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:padding="10dp"
                        android:src="@drawable/headlight_off" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/parking"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                app:cardBackgroundColor="@color/colorControlNormal"
                app:cardCornerRadius="10dp"
                app:cardElevation="0dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/parking_image"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:padding="10dp"
                        android:src="@drawable/parking_off" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
        <LinearLayout
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:layout_width="match_parent"
            android:layout_height="50dp">
            <TextView
                android:id="@+id/max_text"
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:text="0"
                android:gravity="center"
                android:textSize="20dp"
                android:textColor="@color/colorControlNormal"
            />
            <Button
                android:id="@+id/max20"
                android:layout_width="100dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:text="max 30"
            />
            <Button
                android:id="@+id/max30"
                android:layout_weight="1"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:text="max 40"
            />
        </LinearLayout>
        <LinearLayout
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:layout_width="match_parent"
            android:layout_height="50dp">
            <Button
                android:id="@+id/gear0"
                android:layout_width="100dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:text="Mode 1"
            />
            <Button
                android:id="@+id/gear1"
                android:layout_weight="1"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:text="Mode 2"
            />
            <Button
                android:id="@+id/gear2"
                android:layout_weight="1"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:text="Mode 3"
            />
        </LinearLayout>
